{
	"name": "pfefferle/wordpress-atproto",
	"description": "AT Protocol (Bluesky) integration for WordPress",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Matthias Pfefferle",
			"email": "pfefferle@gmail.com",
			"homepage": "https://notiz.blog/"
		}
	],
	"require": {
		"php": ">=8.0",
		"spomky-labs/cbor-php": "^3.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"ATProto\\": "includes/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf",
		"test": "phpunit"
	}
}
